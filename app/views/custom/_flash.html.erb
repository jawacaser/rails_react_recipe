<% flash.each do |key, value| %>   
    <%# <div class="mt-3" style="background-color: #293241;"> %>
        <div class="container alert <%= key == 'notice' ? 'alert-primary' : 'alert-danger' %> alert-dismissible text-white" role="alert" style="background-color: #293241;">
            <%= value %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
    <%# </div> %>
<% end %>